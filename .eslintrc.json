{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "spaced-comment": "warn",
        "max-len": "warn",
        "react/jsx-indent": "warn",
        "react/jsx-tag-spacing": "warn",
        "no-unused-vars": "warn",
        "indent": "warn",
        "import/prefer-default-export": "warn",
        "jsx-a11y/label-has-associated-control": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
